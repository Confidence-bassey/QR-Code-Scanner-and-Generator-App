<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welcome_bg_design"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/scannerBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Open  OR Code Scanner"
        android:layout_marginTop="600dp"
        android:textStyle="bold"
        android:background="@drawable/button_bg_design"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/generatorQR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scannerBtn"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@drawable/button_bg_design"
        android:text="Open OR Code Generator" />
</RelativeLayout>